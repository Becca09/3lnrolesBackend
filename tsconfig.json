{
  "compilerOptions": {
    // File layout
    "rootDir": ".",
    "outDir": "./dist",

    // Module / runtime settings for Node ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // Node types
    "types": ["node"],

    // Other outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // ESM and safety options
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },

  "include": ["src", "api"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
